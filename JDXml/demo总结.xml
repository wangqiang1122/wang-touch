            <dataDefines>
                <dataDefine  middleType="J_TEXT" middleName="text" name="text" type="text" propertyName="title文案">
                    <config>

                    </config>
                </dataDefine>
            </dataDefines>
        </editProperty>
    </text>
</container>
</floor>

